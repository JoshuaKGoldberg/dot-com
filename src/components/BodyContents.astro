---
export interface Props {
	as: string;
	class?: string | undefined;
}

const { as: As = "div", ...rest } = Astro.props;
---

<As class:list={["bodyContents", Astro.props.class]} {...rest}>
	<slot />
</As>

<style>
	.bodyContents {
		padding: 0 var(--widthPagePadding);
	}

	@media (min-width: 1017px) {
		.bodyContents {
			padding: 0;
		}
	}
</style>
