---
export interface ColorSchemeImages {
	dark: string;
	light: string;
}

export interface Props {
	alt: string;
	class?: string | undefined;
	size: "small" | "large";
	src: string | ColorSchemeImages;
}

const src =
	typeof Astro.props.src === "string"
		? { dark: Astro.props.src, light: Astro.props.src }
		: Astro.props.src;
---

<div class:list={["heroImage", Astro.props.class, Astro.props.size]}>
	<picture>
		<source srcset={src.dark} media="(prefers-color-scheme: dark)" />
		<source srcset={src.light} media="(prefers-color-scheme: light)" />
		<img alt={Astro.props.alt} class={Astro.props.size} src={src.light} />
	</picture>
</div>

<style>
	.heroImage.small {
		--imageSize: 128px;
	}

	.heroImage.large {
		--imageSize: 160px;
	}

	img {
		border-radius: 100%;
		box-shadow: 0 3px 7px 3px var(--colorSubtle);
		user-select: none;
		height: var(--imageSize);
		width: var(--imageSize);
	}

	@media (min-width: 700px) {
		.heroImage.large {
			--imageSize: 256px;
		}

		img {
			max-height: 100%;
			max-width: 100%;
		box-shadow: 0 7px 7px 3px var(--colorSubtle);
		}
	}
</style>
