---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

export interface HeroImageMetadata {
	alt: string;
	src: ImageMetadata;
}

export interface HeroImageProps extends HeroImageMetadata {
	class?: string | undefined;
	size: "large" | "small";
}

// TODO: light/dark mode?
---

<div class:list={["hero-image", Astro.props.size, Astro.props.class]}>
	<Image alt={Astro.props.alt} src={Astro.props.src} />
</div>

<style>
	.hero-image {
		height: var(--imageSize);
		width: var(--imageSize);
	}

	.hero-image.small {
		--imageSize: var(--heroSizeSmall);
	}

	.hero-image.large {
		--imageSize: var(--heroSizeLarge);
	}

	.hero-image img {
		display: block;
		border-radius: 100%;
		box-shadow: 0 3px 7px 3px var(--colorSubtle);
		max-height: 100%;
		max-width: 100%;
		user-select: none;
	}

	@media (min-width: 700px) {
		.hero-image img {
			box-shadow: 0 3px 14px 0 var(--colorSubtle);
		}
	}
</style>
