---
import { Text } from "~/components/Text";

interface Props {
	size?: "normal" | "wide";
}
---

<Text
	as="p"
	class:list={["secondary", Astro.props.size ?? "normal"]}
	fontSize="subtitle"
	fontWeight="medium"
>
	<slot />
</Text>

<style>
	.secondary {
		margin: 1rem 0 2rem;
	}

	.secondary.normal {
		max-width: 23rem;
	}

	@media (min-width: 700px) {
		.secondary {
			margin: 0.75rem 0 0;
		}
	}
</style>
