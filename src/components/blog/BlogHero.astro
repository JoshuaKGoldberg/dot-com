---
import HeroImage, { Props as HeroImageProps } from "../HeroImage.astro";
import HeroSecondary from "../HeroSecondary.astro";
import HeroTertiary from "../HeroTertiary.astro";
import HeroTitle from "../HeroTitle.astro";
import { DateAndMinutes } from "./DateAndMinutes";

interface Props {
	body: string;
	date: Date;
	description: string;
	image: HeroImageProps;
	title: string;
}
---

<div class="blogHero">
	<div class="left">
		<div class="primary">
			<HeroImage {...Astro.props.image} size="small" />
			<div>
				<HeroTitle>{Astro.props.title}</HeroTitle>
				<HeroTertiary>
					<DateAndMinutes
						body={Astro.props.body}
						date={Astro.props.date}
						year="numeric"
					/>
				</HeroTertiary>
			</div>
		</div>
		<HeroSecondary size="wide">
			{Astro.props.description}
		</HeroSecondary>
	</div>
	<div class="details"></div>
</div>

<style>
	.primary {
		display: grid;
		gap: 1.5rem;
		grid-template-columns: auto auto;
		margin-bottom: 2rem;
		width: 100%;
	}

	@media (min-width: 1017px) {
		.blogHero {
			margin-right: var(--widthTableOfContents);
		}
	}
</style>
