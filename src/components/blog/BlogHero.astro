---
import { BlogShare } from "./BlogShare";
import HeroImage, { Props as HeroImageProps } from "../HeroImage.astro";
import HeroSecondary from "../HeroSecondary.astro";
import HeroTertiary from "../HeroTertiary.astro";
import HeroTitle from "../HeroTitle.astro";
import { DateAndMinutes } from "./DateAndMinutes";

interface Props {
	body: string;
	class?: string | undefined;
	date: Date;
	description: string;
	image: HeroImageProps;
	title: string;
}
---

<div class:list={["blogHero", Astro.props.class]}>
	<div class="left">
		<div class="primary">
			<HeroImage {...Astro.props.image} class="image" size="small" />
			<div>
				<HeroTitle>{Astro.props.title}</HeroTitle>
				<HeroTertiary>
					<DateAndMinutes
						body={Astro.props.body}
						date={Astro.props.date}
						year="numeric"
						>
						<BlogShare
							description={Astro.props.description}
							url={Astro.url}
							title={Astro.props.title}
						/>
					</DateAndMinutes>
				</HeroTertiary>
			</div>
		</div>
		<HeroSecondary size="wide">
			{Astro.props.description}
		</HeroSecondary>
	</div>
	<div class="details"></div>
</div>

<style>
	.image {
		float: right;
	}

	@media (min-width: 700px) {
		.primary {
			display: grid;
			gap: 1.5rem;
			grid-template-columns: auto auto;
			margin-bottom: 2rem;
			width: 100%;
		}
	}

	@media (min-width: 1017px) {
		.blogHero {
			margin-right: var(--widthTableOfContents);
		}
	}
</style>
