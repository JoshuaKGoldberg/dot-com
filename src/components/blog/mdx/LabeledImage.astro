---
import LabeledMedia, { type MediaOriginal } from "./LabeledMedia.astro";

export interface Props {
	alt: string;
	description: string | string[];
	note?: string;
	original?: MediaOriginal | string;
	src: { src: string } | string;
}
---

<LabeledMedia
	description={Astro.props.description}
	note={Astro.props.note}
	original={Astro.props.original}
>
	<img
		alt={Astro.props.alt}
		class="labeled-image"
		src={typeof Astro.props.src === "string"
			? Astro.props.src
			: Astro.props.src.src}
	/>
</LabeledMedia>

<style is:inline>
	.labeled-image {
		display: block;
		margin: auto;
		max-height: 25rem;
		max-width: 100%;
	}
</style>
