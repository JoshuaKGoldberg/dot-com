---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

import type { MediaOriginal } from "./MediaOriginalNote.astro";

import LabeledMedia from "./LabeledMedia.astro";

export interface Props {
	alt: string;
	description: string | string[];
	note?: string;
	original?: MediaOriginal | string;
	src: ImageMetadata["src"];
}
---

<LabeledMedia
	description={Astro.props.description}
	note={Astro.props.note}
	original={Astro.props.original}
>
	<Image
		alt={Astro.props.alt ?? Astro.props.description}
		class="labeled-image"
		inferSize
		src={Astro.props.src}
	/>
</LabeledMedia>

<style is:inline>
	.labeled-image {
		display: block;
		margin: auto;
		max-height: 25rem;
		max-width: 100%;
	}
</style>
