---
export interface Props {
	src: string;
	title: string;
}
---

<iframe
	allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"
	allowfullscreen
	class="iframe"
	src={Astro.props.src}
	height="315"
	title={Astro.props.title}
	width="560"></iframe>
<em class="em">
	<slot name="primary" />
	<small><slot name="secondary" /></small>
</em>

<style is:inline>
	.iframe {
		border: 0;
		margin: auto;
	}

	.em {
		display: block;
		margin-bottom: 2rem;
		text-align: center;
	}
</style>
