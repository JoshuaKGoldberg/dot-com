---
import { getCollection } from "astro:content";

import Hero from "../components/Hero.astro";
import { SpeakingTabsAndContent } from "../components/SpeakingTabsAndContent";
import { Squiggly } from "../components/Squiggly";
import { Text } from "../components/Text";
import BaseLayout from "../layouts/BaseLayout.astro";

const allSpeakings = await getCollection("speaking");
---

<BaseLayout title="Speaking">
	<Hero image="/images/speaking.png">
		<Squiggly
			as="h1"
			align="left"
			class="h1"
			fontSize="title-secondary"
			fontWeight="bolder"
			info="My favorite talks are the TypeScript shenanigans ones..."
			staticContent
			title="Speaking"
		/>
		<Text as="p" class="subtitle" fontSize="medium" fontWeight="light">
			I've been conference speaking since 2019 and now regularly
			present worldwide.
		</Text>
		<Text as="p" class="subtitle" fontSize="medium" fontWeight="light">
			In 2023 I became a Microsoft MVP for my community education and
			outreach.
		</Text>
		<Text as="p" class="subtitle" fontSize="small" fontWeight="light">
			Want me to speak at your event? Hooray!
			<br />
			Please see my <a
				class="rider"
				href="https://github.com/JoshuaKGoldberg/speaker-rider"
				>speaker rider</a
			>.
		</Text>
	</Hero>

	<SpeakingTabsAndContent
		client:load
		speakings={allSpeakings.sort((a, b) => +b.data.date - +a.data.date)}
	/>
</BaseLayout>

<style>
	.h1 {
		display: inline-block;
		position: relative;
	}

	.subtitle {
		margin-top: 2rem;
		max-width: 24rem;
	}

	.rider {
		text-decoration: underline;
		text-decoration-thickness: 1px;
	}
</style>
